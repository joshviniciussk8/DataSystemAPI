@model DataSystemFront.Domain.Models.TarefaModel

@{
    ViewData["Title"] = "Deletando Tarefa";
}
@if (ViewBag.MensagemErro != null)
{
    <div class="alert alert-danger">
        @ViewBag.MensagemErro
    </div>
}

<h1>Deletar Tarefa</h1>

<h3>Certeza que deseja me Deletar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Título </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            <label>Descrição </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            <label>Data de Conclusão </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
        <dt class = "col-sm-2">
            <label>Data de Criação </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataConclusao)
        </dd>
        <dt class = "col-sm-2">
            <label>Status </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
    </form>
    <br />
    @using (Html.BeginForm("Index", "Tarefa", FormMethod.Get))
    {
        <button type="submit" class="btn btn-light">Voltar</button>
    }
</div>
