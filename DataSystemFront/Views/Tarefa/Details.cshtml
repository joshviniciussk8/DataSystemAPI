@model DataSystemFront.Domain.Models.TarefaModel

@{
    ViewData["Title"] = "Tarefa";
}

<h1>Detalhes</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Título </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            <label>Descrição </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class = "col-sm-2">
            <label>Data de Conclusão </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCriacao)
        </dd>
        <dt class = "col-sm-2">
            <label>Data de Criação </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataConclusao)
        </dd>
        <dt class = "col-sm-2">
            <label>Status </label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.status)
        </dd>
    </dl>
</div>
<div>
    @using (Html.BeginForm("Index", "Tarefa", FormMethod.Get))
    {
        <button type="submit" class="btn btn-secondary">Voltar</button>
    }
</div>
